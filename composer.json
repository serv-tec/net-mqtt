{
    "name": "serv-tec\/net-mqtt",
    "description": "MQTT protocol implementation",
    "keywords": [
        "net",
        "mqtt"
    ],
    "homepage": "https:\/\/github.com\/binsoul\/net-mqtt",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian M\u00f6\u00dfler",
            "email": "code@binsoul.de",
            "homepage": "https:\/\/github.com\/binsoul",
            "role": "Developer"
        },
        {
            "name": "serv-tec",
            "homepage": "https:\/\/github.com\/serv-tec",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-mbstring": "*",
        "ext-ctype": "*"
    },
    "require-dev": {
        "phpunit\/phpunit": "^8",
        "friendsofphp\/php-cs-fixer": "^2",
        "phpstan\/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "BinSoul\\Net\\Mqtt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinSoul\\Test\\Net\\Mqtt\\": "tests"
        },
        "exclude-from-classmap": [
            "\/tests\/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": [
            "php-cs-fixer fix src --rules=@Symfony,-yoda_style,-no_superfluous_phpdoc_tags",
            "php-cs-fixer fix tests --rules=@Symfony,-yoda_style,-no_superfluous_phpdoc_tags"
        ],
        "analyze": "phpstan analyse -l 7 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "old": {
        "owner": "binsoul",
        "name": "net-mqtt"
    },
    "support": {
        "issues": "https:\/\/github.com\/serv-tec\/Net-Mqtt\/issues",
        "wiki": "https:\/\/github.com\/serv-tec\/Net-Mqtt\/wiki",
        "source": "https:\/\/github.com\/serv-tec\/Net-Mqtt"
    },
    "replace": {
        "binsoul\/net-mqtt": "*"
    }
}